@model Football.Team

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <style>
        .scaled-image {
            max-width: 100%;
            height: auto;
        }

        .mx-2 {
            margin-right: 0.5rem;
            margin-left: 0.5rem;
        }

        .mt-2 {
            margin-top: 0.5rem;
        }
    </style>
    <hr />
    <div class="row">
        <div class="col-sm-2">
            <dt>
                @Html.DisplayNameFor(model => model.TeamLogo)
            </dt>
            <dd>
                <img src="@Model.TeamLogo" alt="Team Logo" class="scaled-image">
            </dd>
        </div>
        <div class="col-sm-10">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.TeamName)
                </dt>
                <dd class="col-sm-8 mx-2">
                    @Html.DisplayFor(model => model.TeamName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.TeamCity)
                </dt>
                <dd class="col-sm-8 mx-2">
                    @Html.DisplayFor(model => model.TeamCity)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.StadiumName)
                </dt>
                <dd class="col-sm-8 mx-2">
                    @Html.DisplayFor(model => model.StadiumName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.OwnerName)
                </dt>
                <dd class="col-sm-8 mx-2">
                    @Html.DisplayFor(model => model.OwnerName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.League)
                </dt>
                <dd class="col-sm-8 mx-2">
                    @Html.DisplayFor(model => model.League.LeagueName)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
